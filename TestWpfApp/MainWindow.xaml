<Window x:Class="TestWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Todo List" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <Window.Background>
        <!-- Fundo azul com gradiente -->
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0D1B2A" Offset="0.0"/>
            <GradientStop Color="#1B263B" Offset="0.5"/>
            <GradientStop Color="#415A77" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        <!-- Estilo de Botões -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#778DA9"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#A9BCD0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#415A77"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Template para itens da lista -->
        <DataTemplate x:Key="TodoItemTemplate">
            <Border Background="#E0E1DD" CornerRadius="6" Padding="5" Margin="0,4">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <CheckBox IsChecked="{Binding IsDone, Mode=TwoWay}" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding Description}" VerticalAlignment="Center" Margin="0,0,10,0"
                               Foreground="#0D1B2A" FontSize="14"/>
                    <Button Content="Remover" Tag="{Binding}" Click="RemoveTask_Click"/>
                </StackPanel>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Área de adicionar tarefa -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,15">
            <TextBox x:Name="TaskInput" Width="400" Height="32" Margin="0,0,10,0"
                     VerticalAlignment="Center" 
                     Padding="6"
                     FontSize="14"
                     Background="#E0E1DD"
                     Foreground="#0D1B2A"
                     BorderThickness="0"
                     />
            <Button Content="Adicionar" Click="AddTask_Click"/>
        </StackPanel>

        <!-- Lista de tarefas -->
        <ListBox x:Name="TodoList" Grid.Row="1" 
                 ItemTemplate="{StaticResource TodoItemTemplate}"
                 Background="Transparent"
                 BorderThickness="0"
                 />
    </Grid>
</Window>
