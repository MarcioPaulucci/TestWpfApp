<Window x:Class="TestWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Todo List" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="TodoItemTemplate">
            <StackPanel Orientation="Horizontal">
                <CheckBox IsChecked="{Binding IsDone, Mode=TwoWay}" Margin="0,0,10,0"/>
                <TextBlock Text="{Binding Description}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <Button Content="Remover" Click="RemoveTask_Click" Tag="{Binding}" Width="80"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBox x:Name="TaskInput" Width="400" Height="30" Margin="0,0,10,0" VerticalAlignment="Center" />
            <Button Content="Adicionar" Width="100" Height="30" Click="AddTask_Click"/>
        </StackPanel>
        <ListBox x:Name="TodoList" Grid.Row="1" ItemTemplate="{StaticResource TodoItemTemplate}" />
    </Grid>
</Window>
